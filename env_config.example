# Trip Advisor - Environment Configuration
# Copy this file to .env and fill in your API keys

# YouTube API Key (optional - for getting video descriptions when transcripts are not available)
# Get it from: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API Key (required for AI analysis)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Maps API Key (required for geocoding and maps)
# Get it from: https://console.cloud.google.com/google/maps-apis/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here


